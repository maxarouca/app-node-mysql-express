<% include ../partials/header.ejs %>

    <div class="container">

	    <h1>Pessoas</h1>
	    <p><a href="/pessoas/create" class="btn btn-success">Nova Pessoa</a></p>

	    <table class="table table-striped table-bordered table-hovered">
	    	<hr>
	    </table>

	    <table style="margin: 50px 0px" class="table table-bordered table-striped table-hover">
            <tr>
                <th>Nome</th>
                <th>Cargo</th>
                <th>Aniversário</th>
                <th>Ações</th>
            </tr>
            <% pessoas.map(pessoa => {%>
            	<tr>
            		<td><%= pessoa.nome%></td>
            		<td><%= pessoa.cargo%></td>
            		<td><%= pessoa.aniversario%></td>
            		<td>
						<a href="/pessoas/update/<%= pessoa.id%>" class="btn btn-info">Editar</a>
						<a href="/pessoas/delete/<%= pessoa.id%>"class="btn btn-danger">Excluir</a>
            		</td>
            	</tr>
            <%})%>

        </table>

	    

    </div><!-- /.container -->


<% include ../partials/footer.ejs %>